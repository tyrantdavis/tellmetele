<h1 class="w3-center">Inquiry Results</h1>
<% if error_msg %>
    <p class="w3-bold w3-xxlarge"><%= error_msg %></p>
    <section class="container">
        <p><%= link_to "Back",  :back, class: 'w3-bar-item  w3-hover-green w3-btn  w3-btn-lg w3-border w3-border-green' %>
             <%= link_to "Home",  root_url, class: 'w3-bar-item w3-hover-green w3-btn w3-btn-lg w3-border w3-border-green' %>
        </p>
    </section>
<% else %>
    <section class="w3-content w3-continer">
    <% inquiry_results.each do |show| %>
      <% if show['poster_path'] %>
            <%= link_to image_tag("https://image.tmdb.org/t/p/w200/#{show['poster_path']}", :alt => "#{show['original_name']}.", class: "poster w3-image w3-padding w3-card"),  root_url + 'tvs/show?' + {tvid: show['id']}.to_param, method: :get %>
          <% else %>
          <section class="w3-container w3-display-container">
            <%= link_to image_tag("no-image.png", :alt => "No Image Available."), root_url + 'tvs/show?' + {tvid: show['id']}.to_param, class:"w3-card", method: :get  %>
            <div class=""><%= "#{show['original_name']}" %></div>
          </section>
        <% end %>
<% end %>
</section>
<!-- Pagination -->
<%= render partial: 'shared/pagination' %>
<% end %>
